{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "network-name": {
            "type": "string"
            },
        "subnet-name": {
            "type": "string"
            },
        "network-prefix": {
            "type": "string"
            },
        "subnet-prefix": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('network-name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('network-name')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('network-prefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet-name')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet-prefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}